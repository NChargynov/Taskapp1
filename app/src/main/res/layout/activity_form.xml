<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_onboard"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".FormActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Добро пожаловать"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:layout_marginTop="130dp"
        android:textColor="@color/colorPrimaryWhite"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Программа для хранения списка задач для вас!"
        android:textSize="15sp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimaryWhite"/>

    <EditText
        android:id="@+id/editText"
        style="@style/EditTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:hint="Введите название задачи"
        android:inputType="textCapSentences"
        android:textColor="@color/colorPrimaryWhite"
        android:textColorHint="@color/colorPrimaryWhite"/>

    <EditText
        android:id="@+id/edit_desk"
        style="@style/EditTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите описание задачи"
        android:inputType="textCapSentences"
        android:textColor="@color/colorPrimaryWhite"
        android:textColorHint="@color/colorPrimaryWhite"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_button"
        android:onClick="onClick"
        android:text="Cохранить"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryWhite" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Забыли название задачи? Мы можем помочь."
        android:textSize="15sp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimaryWhite"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="_______________________или ________________________"
        android:textSize="15sp"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:textColor="@color/colorPrimaryWhite"/>

    <ImageView
        android:id="@+id/imageView_phone"
        android:layout_width="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Загрузить с телефона"
        android:layout_gravity="center"
        android:textSize="17sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimaryWhite"/>

    <ImageView
        android:id="@+id/imageViewFlag"
        android:layout_width="25dp"
        android:layout_gravity="center"
        android:layout_height="25dp"
        android:layout_marginTop="40dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Сделано в Кыргызстане"
            android:layout_gravity="center"
            android:textColor="@color/colorPrimaryWhite" />





</LinearLayout>